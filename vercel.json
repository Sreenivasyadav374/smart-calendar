{
  "version": 2,
  "builds": [
    { 
      "src": "package.json", 
      "use": "@vercel/static-build", 
      "config": { "distDir": "dist" } 
    },
    { 
      "src": "backend/src/server.js", 
      "use": "@vercel/node" 
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "backend/src/server.js" 
    },
    { 
      "src": "/([^/]+\\.[a-z]+)$",
      "dest": "/dist/$1"
    },
    { 
      "src": "/assets/(.*)", 
      "dest": "/dist/assets/$1" 
    },

    { 
      "src": "/(.*)", 
      "dest": "/dist/index.html" 
    }
  ]
}